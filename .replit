modules = ["python-3.12", "web", "nodejs-20"]
compile = "make"

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales"]

[deployment]
build = ["sh", "-c", "make"]

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 44279134
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m flask --app crunevo:create_app run --host=0.0.0.0 --port=5000"
